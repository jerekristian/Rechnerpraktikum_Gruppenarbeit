<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home_screen">
    <TextView
            android:layout_width="293dp"
            android:layout_height="91dp"
            android:id="@+id/hs_text1"
            android:text="Was möchtest du üben? " android:textSize="30sp"
            app:fontFamily="sans-serif"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" android:textColor="@android:color/black"/>
    <RadioGroup
            android:layout_width="281dp"
            android:layout_height="273dp"
            android:id="@+id/hs_radiogroup" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="65dp" android:layout_marginStart="65dp" android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@+id/hs_text1" android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toTopOf="@+id/hs_button1">
        <RadioButton
                android:text="Addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/hs_rb1" android:layout_weight="1"
                android:textSize="24sp" android:typeface="sans" android:textColor="@color/colorAccent"
                android:textStyle="bold" android:checked="true"/>
        <RadioButton
                android:text="Subtraktion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/hs_rb2" android:layout_weight="1"
                android:textSize="24sp" android:textColor="@color/colorPrimary" android:textStyle="bold"
                android:visibility="visible"/>
    </RadioGroup>
    <Button
            android:text="Los gehts !"
            android:layout_width="119dp"
            android:layout_height="61dp"
            android:id="@+id/hs_button1" android:layout_marginEnd="66dp" android:layout_marginRight="66dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="73dp" android:textSize="18sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black" android:onClick="AuswahlLesen"/>
    <Button
            android:text="Hilfe?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hs_help" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="74dp" android:onClick="tohelp"/>
</android.support.constraint.ConstraintLayout>